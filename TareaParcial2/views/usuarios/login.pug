extends ../layout 

block content
    a(href='/usuarios') Volver
    br
    h1 Nuevo usuario 
    form(action='/usuarios/login' method='POST')
        table.table 
            tr 
                td
                    label(for='email') Email:
                td
                    input#email(type='text' name='email')
            tr 
                td
                    label(for='pwd') Password:
                td
                    input#pwd(type='password' name='password')
            tr
                td 
                td
                    input.btn(type='submit' value='LOGIN')
    if errors
        p= errors.message 
